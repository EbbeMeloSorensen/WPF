<Window x:Class="InputValidation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view1="clr-namespace:InputValidation.View1"
        xmlns:view2="clr-namespace:InputValidation.View2"
        xmlns:view3="clr-namespace:InputValidation.View3"
        xmlns:view4="clr-namespace:InputValidation.View4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Date I">
            <view1:View1 DataContext="{Binding ViewModel1}"/>
        </TabItem>
        <TabItem Header="Date II">
            <view2:View2 DataContext="{Binding ViewModel2}"/>
        </TabItem>
        <TabItem Header="Date III">
            <view3:View3 DataContext="{Binding ViewModel3}"/>
        </TabItem>
        <TabItem Header="Date Range I">
            <view4:View4 DataContext="{Binding ViewModel4}"/>
        </TabItem>
    </TabControl>
</Window>
