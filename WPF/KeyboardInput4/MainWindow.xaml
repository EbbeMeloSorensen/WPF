<Window x:Class="KeyboardInput4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyboardInput4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
            <Button Content="Show First" Width="100" Margin="0,0,8,0" Command="{Binding ShowFirstCommand}" />
            <Button Content="Show Second" Width="100" Command="{Binding ShowSecondCommand}" />
        </StackPanel>

        <!-- ContentControl binds to CurrentViewModel.
             The behavior will focus the generated View when CurrentViewModel changes -->
        <ContentControl Grid.Row="1"
                        Content="{Binding CurrentViewModel}"
                        Focusable="True"
                        local:FocusOnContentBehavior.Enable="True"/>
    </Grid></Window>
