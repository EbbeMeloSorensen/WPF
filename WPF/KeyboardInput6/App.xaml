<Application x:Class="WpfFocusFinal.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- DataTemplates: map VM -> View -->
        <DataTemplate DataType="{x:Type vm:FirstViewModel}" xmlns:vm="clr-namespace:WpfFocusFinal.ViewModels" xmlns:views="clr-namespace:WpfFocusFinal.Views">
            <views:FirstView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SecondViewModel}" xmlns:vm="clr-namespace:WpfFocusFinal.ViewModels" xmlns:views="clr-namespace:WpfFocusFinal.Views">
            <views:SecondView />
        </DataTemplate>
    </Application.Resources>
</Application>
