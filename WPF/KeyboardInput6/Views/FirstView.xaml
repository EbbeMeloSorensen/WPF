<UserControl x:Class="WpfFocusFinal.Views.FirstView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Focusable="True" IsTabStop="True">
    <Border Background="#DDEEFF" Padding="20">
        <StackPanel>
            <TextBlock Text="FIRST VIEW (no focusable children). Press keys to see output in debug." FontSize="14" Margin="0,0,0,10"/>
            <TextBlock Text="Press F1 to log a message; press F5 to switch to second view." />
        </StackPanel>
    </Border>
</UserControl>
